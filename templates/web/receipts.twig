{% extends "layout/layout.twig" %}
{% block css %}
    {% webpack_entry_css 'layout/datatables' %}
{% endblock %}

{% block js %}
    {% webpack_entry_js 'layout/datatables' %}
    {% webpack_entry_js 'web/receipts' %}
{% endblock %}
{% block content %}
  <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <h2><i class="fas fa-fas fa-file-invoice-dollar"></i>Receipt</h2>
                <hr>
                <table id="" class="table table-striped table-bordered dt-responsive nowrap dataTable no-footer dtr-inline collapsed">
                    <thead>
                    <tr>
                        <th>Receipt No</th>
                        <th>Date</th>
                        <th>Total Price</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for receipt in receipts %}                    
                    <tr>
                        <td>{{ receipt.receipt_no }}</td>
                        <td>{{ receipt.create_at}}</td>
                        <td>{{ receipt.total_price }}</td>
                        </td>
                    </tr>
                    {% endfor %}
                    </tbody>
                    <tfoot></tfoot>
                </table>
              <p></p>
          </div>
      </div>
  </div>

<!-- Modal edit receipt -->
  <div class="modal fade" id="editMenu">
    <div class="modal-dialog modal-dialog-centered">
      <div class="modal-content">
        <form id="form-editMenu" action="edit_receipt" method="post">
          <!-- Modal Header -->
          <div class="modal-header">
            <h4 class="modal-title">Edit Menu</h4>
            <button type="button" class="close" data-dismiss="modal">&times;</button>
          </div>
          <!-- Modal body -->
          <div class="modal-body">          
            <div class="form-receipt">
              <input type="text" id="editMenuID" name="id" hidden>
              <label for="receiptName">Menu Code</label>
              <input type="text" autocomplete="off" class="form-control" id="editMenuCode" name="receipt_code" required>
            </div>          
            <div class="form-receipt">
              <label for="email">Menu Name</label>
              <input type="text" autocomplete="off" class="form-control" id="editMenuName" name="food_receipt" required>
            </div>
            <div class="form-receipt">
              <label for="editPassword">Price</label>
              <input type="text" autocomplete="off" class="form-control" id="editPreice" name="price">
            </div>          
            <div class="form-receipt">
              <label for="FoodType">Food Type</label>
              <select class="form-control"  id="editFoodType" name="food_type">
                <option value="REFRESHMENTS">REFRESHMENTS</option>
                <option value="FULLMEALFASTFOOD">FULLMEALFASTFOOD</option>
                <option value="SNACKFASTFOOD">SNACKFASTFOOD</option>
              </select>
            </div>       
            <div class="form-receipt">
              <label for="editStatus">Status</label>
              <select class="form-control"  id="editStatus" name="status">
                  <option value="1">1</option>
                  <option value="2">2</option>
              </select>
            </div>        
          <div class="modal-footer">
            <button type="submit" class="btn btn-primary">Save</button>
            <button type="button" class="btn btn-danger" data-dismiss="modal">Cancel</button>
          </div>
        </form>
      </div>
    </div>
  </div>

<!-- Modal delete receipt -->
  <div class="modal fade" id="deleteMenu">
    <div class="modal-dialog modal-dialog-centered">
      <div class="modal-content">
        <form id="form-deleteMenu" action="delete_receipt" method="post">
          <!-- Modal Header -->
          <div class="modal-header">
            <h4 class="modal-title">Delete Menu</h4>
            <button type="button" class="close" data-dismiss="modal">&times;</button>
          </div>
          <!-- Modal body -->
          <div class="modal-body">          
            <div class="form-receipt">
              <input type="text" id="deleteMenuID" name="id" hidden>
              <label for="receiptName">Menu Code</label>
              <input type="text" autocomplete="off" class="form-control" id="deleteMenuCode" name="receipt_code" required>
            </div>          
            <div class="form-receipt">
              <label for="email">Menu Name</label>
              <input type="text" autocomplete="off" class="form-control" id="deleteMenuName" name="food_receipt" required>
            </div>
            <div class="form-receipt">
              <label for="deletePassword">Price</label>
              <input type="text" autocomplete="off" class="form-control" id="deletePreice" name="price">
            </div>          
            <div class="form-receipt">
              <label for="FoodType">Food Type</label>
              <select class="form-control"  id="deleteFoodType" name="food_type">
                <option value="REFRESHMENTS">REFRESHMENTS</option>
                <option value="FULLMEALFASTFOOD">FULLMEALFASTFOOD</option>
                <option value="SNACKFASTFOOD">SNACKFASTFOOD</option>
              </select>
            </div>       
            <div class="form-receipt">
              <label for="deleteStatus">Status</label>
              <select class="form-control"  id="deleteStatus" name="status">
                  <option value="1">1</option>
                  <option value="2">2</option>
              </select>
            </div>        
          <div class="modal-footer">
            <button type="submit" class="btn btn-primary">Save</button>
            <button type="button" class="btn btn-danger" data-dismiss="modal">Cancel</button>
          </div>
        </form>
      </div>
    </div>
  </div>






{% endblock %}